<% provide(:title, 'Users') %>
<h1>All users</h1>

<%= will_paginate %>

<ul class="users" >
	


<li><table class="table">
  <tr>
		<th></th>
    <th>Name</th>
    <th>Email</th>
    <th>ID</th>
    <th>Password</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr >
		<td><%= gravatar_for user %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.id %></td>
    <td><%= user.password_digest %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
		<% if current_user.admin? && !current_user?(user) %>
			<td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% else %>
			 <td>You cant delete this user</td>
		<% end %>
  </tr>
<% end %>
</table>
</li>


<%= will_paginate %>
</ul>
<br />

<h1>Sortable</h1>
<h2><i>You can move these items</i></h2>
<ul class="nav nav-list" data-sortable="">
<% @users.each do |user| %>
	<li><a href="#"><%= user.name %></a></li>
<% end %>
</ul>
